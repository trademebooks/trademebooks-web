{
  "name": "trademebooks",
  "version": "1.0.0",
  "description": "A Classified Website for Books",
  "engines": {
    "node": "=12"
  },
  "main": "server.js",
  "scripts": {
    "start": "node server",
    "server": "nodemon server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "mongo:start": "docker run --rm -d -p 27017:27017 mongo",
    "test:ci": "npm run test:mac && npm run test:nowatch --prefix client",
    "test:ci:client": "NODE_ENV=ci npm run test:nowatch --prefix client",
    "test:ci:api": "NODE_ENV=ci ./client/node_modules/.bin/jest --config=api/config/jest.config.js --maxWorkers=1",
    "test:mac": "NODE_ENV=testing ./client/node_modules/.bin/jest --config=api/config/jest.config.js --maxWorkers=1",
    "test:windows": "set NODE_ENV=testing && ./client/node_modules/.bin/jest --config=api/config/jest.config.js --maxWorkers=1",
    "db:seed": "node ./api/tests/seeds",
    "db:seed:prod": "NODE_ENV=production node ./api/tests/seeds",
    "prettier:write": "npx prettier --write .",
    "prettier:check": "npx prettier --check .",
    "lint:check": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "scripts:env": "node ./scripts/env.js"
  },
  "author": "Yichen Zhu",
  "dependencies": {
    "@sendgrid/mail": "^7.2.6",
    "axios": "^0.19.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "client": "file:client",
    "connect-mongo": "^3.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-socket.io-session": "^1.3.5",
    "express-validator": "^6.4.0",
    "faker": "^4.1.0",
    "moment": "^2.29.1",
    "mongoose": "^5.9.5",
    "node-fetch": "^2.6.1",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-linkedin-oauth2": "^2.0.0",
    "passport-twitter": "^1.0.4",
    "socket.io": "^2.1.1",
    "validatorjs": "^3.18.1"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "husky": "^4.3.0",
    "nodemon": "^2.0.2",
    "prettier": "2.1.2"
  }
}
