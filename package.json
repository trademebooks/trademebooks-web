{
  "name": "trademebooks",
  "version": "1.0.0",
  "description": "A Classified Website for Books",
  "engines": {
    "node": "=12"
  },
  "main": "server.js",
  "scripts": {
    "start": "node server",
    "server": "nodemon server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "mongo:start": "docker run --rm -d -p 27017:27017 mongo",
    "test": "NODE_ENV=testing jest --config=api/config/jest.config.js --runInBand",
    "db:seed": "node ./api/seeds",
    "db:seed:prod": "NODE_ENV=production node ./api/seeds",
    "prettier:write": "npx prettier --write .",
    "prettier:check": "npx prettier --check ."
  },
  "author": "Yichen Zhu",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^7.2.6",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "client": "file:client",
    "connect-mongo": "^3.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "express-validator": "^6.4.0",
    "faker": "^4.1.0",
    "mongoose": "^5.9.5",
    "node-fetch": "^2.6.1",
    "normalize-url": "^5.0.0",
    "validatorjs": "^3.18.1"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.2",
    "prettier": "2.1.2"
  }
}
